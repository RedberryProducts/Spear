<phpunit 
  colors="true" 
  testdox="true"
  cacheResult="false"
  bootstrap="vendor/autoload.php"
>
  <testsuites>
    <testsuite name="all">
        <directory suffix="Test.php">./tests</directory>
    </testsuite>
  </testsuites>
  <coverage>
    <include>
      <directory suffix=".php">./src</directory>
    </include>
  </coverage>
</phpunit>